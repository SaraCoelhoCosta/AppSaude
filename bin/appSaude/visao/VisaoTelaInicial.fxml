<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>


<GridPane xmlns="http://javafx.com/javafx/16"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="appSaude.controle.ControleTelaInicial">
	<columnConstraints>
		<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
	</rowConstraints>
	<children>
		<Pane fx:id="painelInicial" maxHeight="-Infinity"
			maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
			prefHeight="250.0" prefWidth="320.0" styleClass="geral"
			stylesheets="@Aparencia.css">
			<children>
				<Button fx:id="botaoTelaCalcularIMC" layoutX="74.0"
					layoutY="67.0" mnemonicParsing="false" prefHeight="29.0"
					prefWidth="172.0" onAction="#calcularIMC" styleClass="botao"
					text="Calcular IMC" />
				<Button fx:id="botaoTelaCalcularPesoIdeal" layoutX="74.0"
					layoutY="111.0" mnemonicParsing="false"
					onAction="#calcularPesoIdeal" styleClass="botao"
					text="Calcular Peso Ideal" />
				<Button fx:id="botaoSair" layoutX="74.0" layoutY="156.0"
					mnemonicParsing="false" prefHeight="29.0" prefWidth="172.0"
					onAction="#sair" styleClass="botao" text="Sair" />
			</children>
		</Pane>
	</children>
</GridPane>
